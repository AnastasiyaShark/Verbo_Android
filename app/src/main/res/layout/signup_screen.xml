<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupScreenActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="137dp"
        android:layout_height="129dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="516dp"
        android:contentDescription="@string/verbo_icon_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_verbo_large" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="351dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="145dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/signup_username"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="@string/text_hint_username"
            android:inputType="text"
            android:textColor="@color/black"

            app:met_floatingLabel="normal"
            app:met_maxCharacters="15"
            app:met_minCharacters="2" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/signup_password"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="@string/text_hint_password"

            android:inputType="text"
            android:textColor="@color/black"
            app:met_floatingLabel="normal"
            app:met_maxCharacters="15"
            app:met_minCharacters="5" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="@string/text_hint_email"
            android:inputType="text"
            android:textColor="@color/black"

            app:met_floatingLabel="normal"
            app:met_maxCharacters="15"
            app:met_minCharacters="2" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/signup_native_language"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="@string/text_hint_native"
            android:inputType="text"

            android:textColor="@color/black"
            app:met_floatingLabel="normal"
            app:met_maxCharacters="15"
            app:met_minCharacters="2" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/signup_learning_language"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="@string/text_hint_learning"


            android:inputType="text"
            android:textColor="@color/black"
            app:met_floatingLabel="normal"
            app:met_maxCharacters="15"
            app:met_minCharacters="2" />


    </LinearLayout>

    <Button
        android:id="@+id/button_native_language"
        android:layout_width="82dp"
        android:layout_height="54dp"
        android:text="@string/text_bottom_click_native"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />


    <Button
        android:id="@+id/button_learning_language"
        android:layout_width="82dp"
        android:layout_height="54dp"
        android:text="@string/text_bottom_click_learning"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>